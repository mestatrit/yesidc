<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<diskStore path="./logs/ehcache" />

	<!-- DefaultCache setting. -->
	<defaultCache maxElementsInMemory="1000"
		memoryStoreEvictionPolicy="LRU" eternal="false" timeToIdleSeconds="300"
		timeToLiveSeconds="300" overflowToDisk="false" diskPersistent="false" />


	<cache name="companyCache" maxElementsInMemory="1000"
		eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0"
		overflowToDisk="true" diskPersistent="true"
		diskExpiryThreadIntervalSeconds="0" memoryStoreEvictionPolicy="LFU" />
		
	<cache name="pageCache" maxElementsInMemory="1000"
		eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0"
		overflowToDisk="true" diskPersistent="true"
		diskExpiryThreadIntervalSeconds="0" memoryStoreEvictionPolicy="LFU" />
		
	<cache name="jobCache" maxElementsInMemory="1000"
		eternal="true" timeToIdleSeconds="0" timeToLiveSeconds="0"
		overflowToDisk="true" diskPersistent="true"
		diskExpiryThreadIntervalSeconds="0" memoryStoreEvictionPolicy="LFU" />

</ehcache>
